{
	"name": "@mediaron/react-spinners",
	"version": "0.1.2",
	"description": "A collection of 26 semi-transparent SVG spinners",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./spinner.css": "./dist/spinner.css"
	},
	"files": [
		"dist"
	],
	"type": "commonjs",
	"sideEffects": false,
	"scripts": {
		"generate:components": "node scripts/generate-components.js",
		"generate:index": "node scripts/generate-index.js",
		"prebuild": "npm run generate:components && npm run generate:index",
		"build": "npm run clean && npm run prebuild && tsup src/index.ts --format cjs,esm --dts",
		"postbuild": "node scripts/copy-css.js",
		"clean": "rm -rf dist src/react src/index.ts"
	},
	"peerDependencies": {
		"react": ">=16.8.0",
		"react-dom": ">=16.8.0"
	},
	"devDependencies": {
		"@svgr/cli": "^8.1.0",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tsup": "^8.0.0",
		"typescript": "^5.3.0"
	},
	"keywords": [
		"react",
		"spinner",
		"loader",
		"svg",
		"typescript"
	],
	"author": "",
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/MediaRon/react-spinners.git",
		"homepage": "https://spinners.mediaron.com"
	}
}